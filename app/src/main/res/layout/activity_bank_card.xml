<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    >

    <!-- Bank Card Image -->
    <ImageView
        android:id="@+id/bankCardImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bank_card_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <!-- Bank Card Details -->

    <TextView
        android:id="@+id/cardNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="**** **** **** 1234"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expiryDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardNumberTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Expiry Date: 12/23"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/cardHolderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardNumberTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="27dp"
        android:text="Cardholder: Siwar Baccouche"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
